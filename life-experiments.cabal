build-type:          Simple

library
  hs-source-dirs:
    src
  default-language:
    Haskell2010
  ghc-options:
    -Wall
    -Wno-partial-type-signatures
    -O2
    -threaded
  build-depends:
      base >= 4.13 && <4.14
    , gloss
    , mtl
    , random
    , QuickCheck
  exposed-modules:
    Life.Evolve
    Life.Rule
    Life.Rule.Sierpinski
    Life.Render
    Life.Types

executable dev
  main-is:
    Dev.hs
  -- other-modules:
  ghc-options:
    -Wall
    -Wno-partial-type-signatures
    -O2
    -threaded
  build-depends:
      base >=4.13 && <4.14
    , optional-args
    , text
    , turtle
  hs-source-dirs:
    exe
  default-language:
    Haskell2010

executable random-rule
  main-is:
    RandomRules.hs
  -- other-modules:
  ghc-options:
    -Wall
    -Wno-partial-type-signatures
    -O2
    -threaded
  build-depends:
      base >=4.13 && <4.14
    , gloss
    , life-experiments
    , random
  hs-source-dirs:
    exe
  default-language:
    Haskell2010

executable evolve-simple-rule
  main-is:
    EvolveSimpleRule.hs
  -- other-modules:
  ghc-options:
    -Wall
    -Wno-partial-type-signatures
    -O2
    -threaded
  build-depends:
      base >=4.13 && <4.14
    , gloss
    , life-experiments
    , mtl
    , random
    , QuickCheck
  hs-source-dirs:
    exe
  default-language:
    Haskell2010

test-suite test-evolve-simple-rules
  type:
    exitcode-stdio-1.0
  main-is:
    Test.hs
  -- other-modules:
  hs-source-dirs:
    test
  build-depends:
      base >=4.13 && <4.14
    , life-experiments
    , tasty
    , tasty-hunit
    , tasty-quickcheck
  ghc-options:
    -Wall
    -Wno-partial-type-signatures
  default-language:
    Haskell2010
